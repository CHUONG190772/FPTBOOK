@model ICollection<FPTLibrary.Models.Category>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin View Categories</title>
</head>
<body>
    <div class="container col-md-8 text-center mt-3">
    <h1 class="text-success">Category List</h1>
    
    <table class="table-bordered">
        <thead>
            <tr>
                <th>Category ID</th>
                <th>Category Name</th>
                <th>Category Image</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>
                        <a>
                            <img src="@category.Image" width="80" height="80">
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                        <a class="btn btn-warning" asp-action="Delete" asp-route-id="@category.Id" onclick="    return confirm('Are you sure you want to delete this category?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div><br />
<a class="btn btn-warning" asp-action="Create">Create new category</a><br />
</body>
</html>
