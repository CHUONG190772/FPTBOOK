@model ICollection<FPTLibrary.Models.Book>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book</title>
    <link rel="stylesheet" href="~/css/book_index.css" />
</head>
<body>
    <h1 class="text-success text-center">Book List</h1>
    <div id="tools">
    <a id="add" class="btn btn-warning" asp-action="Create">Add new book</a><br /><br /><br />
    <h5>Search books: </h5><br />
    <form id="search" method="get" asp-action="Index">
        <input type="search" placeholder="Enter the book name" value="@ViewData["GetBook"]" name="BookSearch" style="width: 200px; height: 35px;" />
        <input type="submit" style="height: 35px;" value="Search" class="btn btn-primary" />
        <a asp-action="Index">Get All Books</a>
    </form>
    <h5>Select from category</h5>
    <h5>Sort by price: </h5>
    </div>
    <br /><br />
    <div id="book_content"> 
         @foreach(var book in Model)
         {
                <ul id="book_list">
                    <li id="list">   
                        <div id="info">
                            <a id="image" asp-action="Detail" asp-route-id="@book.Id">
                                    <img src="@book.Image" width="180" height="250">
                            </a> 
                            <h2>@book.Name</h2>
                        </div>
                        <div id="option">
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@book.Id">Edit</a>
                            <a class="btn btn-warning" asp-action="Delete" asp-route-id="@book.Id" onclick="    return confirm('Are you sure you want to remove this book?');">Delete</a>
                        </div>
                    </li>
                </ul>
         }
    </div>
</body>
</html>